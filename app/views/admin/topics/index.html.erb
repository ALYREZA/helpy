<% title "#{admin_title} #{t(:discussions, default: "Discussions")}" %>

<script>
// Polling Hooks
Helpy.current_status_view = '<%= @status %>';
Helpy.refreshList('<%= @status %>');
$('.topic-checkbox').off().on('change', Helpy.cancelRefresh());

$('.stats-default').css({
    'cursor':'pointer',
    'border':'1px solid #666',
    'box-shadow': '0px 0px 10px #eee'}).addClass('over');
</script>

<% content_for :pipeline do %>
<%= render partial: 'admin/shared/pipeline' %>
<% end %>

<div class="topic-search">
<%= render partial: 'admin/search/topic_search' %>
</div>

<h2 id="ticket-page-title">
  <%= t(:discussions, default: "Discussions") %>:
  <span class='label <%= status_class(@status) %>' style='text-transform: uppercase'>
    <%= status_label(@status) if @status %>
  </span>
  <%= render 'admin/topics/ticket_nav_dropdown' %>
  <span class="hidden-xs pull-right">
    <%#= link_to t(:open_new_discussion, default: "Open Discussion"), new_admin_topic_path, remote: true, class: 'btn btn-primary' %>
  </span>
</h2>

<div class="row">
  <div class="col-md-12" id="tickets">
    <%= render 'admin/topics/tickets' %>
  </div>
</div>

<% if show_onboarding? %>
<div id='modal' class="modal" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <iframe src="/admin/onboarding/index" width="100%" height="900" frameborder="no" scrolling="no"></iframe>
    </div>
  </div>
</div>
<script>
// Fire the onboarding modal if needed
$('#modal').modal('toggle');
</script>
<% end %>
